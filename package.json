    "typescript": "^5.1.6",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.0",
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "@tsconfig/svelte": "^5.0.0"
  },
  "devDependencies": {
    "cross-fetch": "^3.1.8",
    "dotenv": "^16.3.1",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "sass": "^1.66.1",
